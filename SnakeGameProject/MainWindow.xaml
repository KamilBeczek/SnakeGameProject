<Window x:Class="SnakeGameProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakeGameProject"
        mc:Ignorable="d"
        Title="Snake Game" Height="500" Width="800"
         WindowStartupLocation="CenterScreen"
        Icon="Assets/Icon.ico">
    
    <Window.Background>
        <ImageBrush ImageSource="Assets/StartingScreen.png"/>
    </Window.Background>
    
    <Viewbox>

    <Grid>
        <RadioButton Name="Easy" GroupName="Difficulty" FlowDirection="RightToLeft" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="225,275,0,0"/>
        <RadioButton Name="Medium" GroupName="Difficulty" FlowDirection="RightToLeft" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="385,275,0,0"/>
        <RadioButton Name="Hard" GroupName="Difficulty" FlowDirection="RightToLeft" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="550,275,0,0"/>


        <Button Content="Start Game"  Height="50" Width="200" Click="Button_Click" Margin="300,400,300,30"/>
       

    </Grid>
        
    </Viewbox>


</Window>

